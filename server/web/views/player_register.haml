
.container-fluid
  .row
    .col-xs-6
      - if @content['error']
        .h4
          %ul
            - @content['error'].each do |field,messages|
              %li
                = field
                %ul
                  - messages.each do |message|
                    %li
                      = message
      %form{:role=>"form", :action=>'/player_register.html',:method => 'POST'}
        .form-group
          %label{:for=>"username"} Username
          %input.form-control{:type => :text, :name=>"username", :placeholder=>"Enter username"}
        .form-group
          %label{:for=>"password"} Password
          %input.form-control{:type=>"password",  :name=>"password", :placeholder=>"Enter password"}
        .form-group
          %label{:for=>"character_name"} Character name
          %input.form-control{:type => :text, :name=>"character_name", :placeholder=>"Enter character name"}
        %button.btn.btn-default{:type => 'submit'} Submit
