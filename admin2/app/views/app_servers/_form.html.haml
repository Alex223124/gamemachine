.row
  .col-lg-4
    = form_for(@app_server, html: {class: 'form-horizontal' }) do |f|
      .form-group
        %label.col-sm-2.control-label
          Name
        .col-sm-10
          = f.text_field :name, :class => 'form-control'
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit nil, :class => 'btn btn-primary'
